<div>
    <div>
        Created by {{blogpost.user.name}} on {{ blogpost.createdAt}}
    </div>
    <div>
        {{blogpost.text}}
    </div>
    {{#if blogpost.comments}}
    {{#each blogpost.comments}}
    <div>
        <p>text:{{text}}</p>
    </div>
    {{/each}}
    {{/if}}

    <div>
        <h2> add a comment</h2>
        <form class="form comment-form" data-id="{{blogpost.id}}">
            <div class="form-group">
                <label for="text-comment">comment text:</label>
                <input class="form-input" type="text" id="text-comment" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">submit</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/comments.js"></script>